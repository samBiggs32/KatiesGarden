@page "/gallery"
@inject IJSRuntime JSRuntime
@using KatiesGarden.Web.Client.Components
@using Shared

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-8">
    <MudText Typo="Typo.h4" Class="text-center mb-6 font-weight-bold">Our Gallery</MudText>

    <MudCard Elevation="3" Class="mb-6">
        <MudCardContent>
            <MudTabs Elevation="2" Rounded="true" Centered="true" Color="Color.Primary" ApplyEffectsToContainer="true" PanelClass="pt-6 px-2">
                <MudTabPanel Text="Woodwork" Icon="@Icons.Material.Filled.Nature">
                    <GalleryTabContent 
                        CarouselId="woodworkCarousel"
                        Images="@WoodworkImages"
                        Title="Welcome to Katie's Garden"
                        Description="@WoodworkDescription"
                        ButtonText="Request Custom Woodwork"
                        ButtonAction="@(() => NavigateToContact("Custom Woodwork Enquiry"))" />
                </MudTabPanel>

                <MudTabPanel Text="Bugs and Hugs" Icon="@Icons.Material.Filled.Pets">
                    <GalleryTabContent 
                        CarouselId="bugsCarousel"
                        Images="@BugHouseImages"
                        Title="Welcome to Katie's Garden"
                        Description="@BugsAndHugsDescription"
                        ButtonText="Order Custom Bug House"
                        ButtonAction="@(() => NavigateToContact("Bug House Order"))" />
                </MudTabPanel>

                <MudTabPanel Text="Maintenance" Icon="@Icons.Material.Filled.Grass">
                    <GalleryTabContent 
                        CarouselId="maintenanceCarousel"                        
                        Images="@MaintenanceImages"
                        Title="Welcome to Katie's Garden"
                        Description="@MaintenanceDescription"
                        ButtonText="Enquire About Maintenance"
                        ButtonAction="@(() => NavigateToContact("Maintenance Service Enquiry"))" />
                </MudTabPanel>
            </MudTabs>
        </MudCardContent>
    </MudCard>

    <ServiceOverview 
        Services="@GardenServices.AsEnumerable()" 
        NavigateToContact="@NavigateToContact" />
</MudContainer>

