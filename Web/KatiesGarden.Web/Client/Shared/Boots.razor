@using KatiesGarden.Web.Client.Components

<MudItem xs="12" md="6" Class="pa-0">
    <div Class="position-relative" Style="height: 100%; min-height: 300px; background-color: var(--mud-palette-primary-darken);">
        <img src="@($"{imageFolderPath}/boot_box.jpg")" alt="Craftsmanship in Action"
             Style="width: 100%; height: 100%; object-fit: cover;" />
        <div Class="position-absolute d-flex flex-column justify-center align-center"
             Style="inset: 0; background-color: rgba(0,0,0,0.1);">
            <div Class="px-4 py-3 rounded-lg text-center" Style="background-color: rgba(0,0,0,0.6); max-width: 100%"
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-2" Style="text-shadow: 2px 2px 4px #000;">
                    Handcrafted with Passion
                </MudText>
                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Style="text-shadow: 1px 1px 3px #000;">
                    Every piece tells a story
                </MudText>
            </div>
        </div>
    </div>
</MudItem>


@code{
private const string imageFolderPath = "Images/Gallery";
}