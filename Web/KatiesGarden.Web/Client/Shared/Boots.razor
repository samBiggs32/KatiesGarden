@namespace KatiesGarden.Web.Client.Components.Shared

<MudItem xs="12" md="6" Class="pa-0">
    <div Class="position-relative" Style="height: 100%; min-height: 300px; background-color: var(--mud-palette-primary-darken);">
        <img src="@($"{ImagePath}/{ImageFile}")" alt="@AltText"
             Style="width: 100%; height: 100%; object-fit: cover;" />
        <div Class="position-absolute d-flex flex-column justify-center align-center"
             Style="inset: 0; background-color: rgba(0,0,0,0.5);">
            <div Class="px-4 py-3 rounded-lg text-center" Style="background-color: rgba(0,0,0,0.6); max-width: 80%;">
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-2" Style="text-shadow: 2px 2px 4px #000;">
                    @Title
                </MudText>
                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Style="text-shadow: 1px 1px 3px #000;">
                    @Subtitle
                </MudText>
            </div>
        </div>
    </div>
</MudItem>

@code {
    [Parameter] public string ImagePath { get; set; } = "/images/gallery";
    [Parameter] public string ImageFile { get; set; } = "boot_box.jpg";
    [Parameter] public string AltText { get; set; } = "Craftsmanship in Action";
    [Parameter] public string Title { get; set; } = "Handcrafted with Passion";
    [Parameter] public string Subtitle { get; set; } = "Every piece tells a story";
}